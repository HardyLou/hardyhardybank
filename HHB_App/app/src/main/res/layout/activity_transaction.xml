<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".TransactionActivity"
    android:background="@drawable/bg2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/transactions_account_info"
        android:layout_gravity="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_weight="0.04"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffbf9ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/transactions_balance"
        android:layout_gravity="center"
        android:layout_below="@+id/transactions_account_info"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_weight="0.04"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffbf9ff"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transactions_list_view"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/transactions_balance"
        android:layout_weight="0.02" >
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:focusable="false"
        android:background="@drawable/back"
        android:id="@+id/action_return"
        android:layout_gravity="center"
        android:layout_below="@+id/transactions_list_view"
        android:layout_centerHorizontal="true"
        android:width="200dp" />


</RelativeLayout>