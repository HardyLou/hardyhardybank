<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2">

    <ScrollView
        android:id="@+id/main_activity_user_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/activity_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_activity_account_info"
        android:layout_gravity="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffbf9ff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_activity_account_balance"
        android:layout_gravity="center"
        android:layout_below="@+id/admin_activity_account_info"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#fffbf9ff"/>

     <Button
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:background="@drawable/transactions"
        android:id="@+id/action_transaction"
         android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:width="200dp"
        android:height="100dp"
         android:layout_below="@+id/admin_activity_account_balance"
         android:layout_alignLeft="@+id/action_debit"
         android:layout_alignStart="@+id/action_debit"
         android:layout_margin="10dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:background="@drawable/debit"
        android:id="@+id/action_debit"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="100dp"
        android:layout_below="@+id/action_transaction"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:background="@drawable/credit"
        android:id="@+id/action_credit"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="100dp"
        android:layout_below="@+id/action_debit"
        android:layout_alignLeft="@+id/action_debit"
        android:layout_alignStart="@+id/action_debit"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:background="@drawable/closeacc"
        android:id="@+id/action_close"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="100dp"
        android:layout_below="@+id/action_credit"
        android:layout_alignLeft="@+id/action_credit"
        android:layout_alignStart="@+id/action_credit"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:focusable="false"
        android:background="@drawable/returnto"
        android:id="@+id/action_return"
        android:layout_gravity="center"
        android:width="200dp"
        android:layout_below="@+id/close_account"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
