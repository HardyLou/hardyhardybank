<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_activity_account_info"
        android:layout_gravity="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_weight="0.04"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_activity_account_balance"
        android:layout_gravity="center"
        android:layout_below="@+id/admin_activity_account_info"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_weight="0.04"
        android:textSize="40sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transactions"
        android:id="@+id/action_transaction"
         android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:width="200dp"
        android:height="120dp"
         android:layout_below="@+id/admin_activity_account_balance"
         android:layout_alignLeft="@+id/action_debit"
         android:layout_alignStart="@+id/action_debit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_debit"
        android:id="@+id/action_debit"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="120dp"
        android:layout_below="@+id/action_transaction"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_credit"
        android:id="@+id/action_credit"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="120dp"
        android:layout_below="@+id/action_debit"
        android:layout_alignLeft="@+id/action_debit"
        android:layout_alignStart="@+id/action_debit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_account"
        android:id="@+id/action_close"
        android:layout_gravity="center"
        android:width="200dp"
        android:height="120dp"
        android:layout_below="@+id/action_credit"
        android:layout_alignLeft="@+id/action_credit"
        android:layout_alignStart="@+id/action_credit" />

</RelativeLayout>
