<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Credit Account"
    android:id="@+id/credit_label"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:textSize="40sp"
    android:layout_weight="0.001"
    android:gravity="center|center_vertical|center_horizontal"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/credit_activity_account_info"
    android:layout_gravity="center"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:layout_weight="0.04"
    android:textSize="25sp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/credit_label" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/credit_activity_account_balance"
    android:layout_gravity="center"
    android:layout_below="@+id/credit_activity_account_info"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:layout_weight="0.04"
    android:textSize="25sp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter Amount to Credit"
    android:id="@+id/enter_amount_credit"
    android:layout_gravity="center_horizontal"
    android:textSize="20sp"
    android:paddingLeft="30dp"
    android:paddingRight="75dp"
    android:layout_below="@+id/credit_activity_account_balance"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@+id/credit_amount" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="10"
    android:id="@+id/credit_amount"
    android:layout_gravity="center_horizontal"
    android:hint="0.00"
    android:paddingLeft="75dp"
    android:paddingRight="30dp"
    android:gravity="center_horizontal"
    android:layout_below="@+id/credit_activity_account_balance"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="false" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/enter"
    android:id="@+id/credit_enter"
    android:layout_gravity="center"
    android:width="200dp"
    android:layout_below="@+id/enter_amount_credit"
    android:layout_alignLeft="@+id/credit_return"
    android:layout_alignStart="@+id/credit_return" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Return"
    android:id="@+id/credit_return"
    android:width="200dp"
    android:layout_gravity="center"
    android:layout_below="@+id/credit_enter"
    android:layout_centerHorizontal="true" />
</RelativeLayout>