<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/debit_account"
        android:id="@+id/debit_label"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/checking_account"
        android:id="@+id/account_label"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="100dp"
        android:paddingRight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/available_balance"
        android:layout_gravity="center_horizontal"
        android:text="balance" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\n\nEnter Amount to Debit"
        android:id="@+id/enter_amount"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/debit_amount"
        android:layout_gravity="center_horizontal"
        android:hint="0.00"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:id="@+id/debit_enter"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debit_return_main"
        android:id="@+id/debit_return_main"
        android:layout_gravity="center_horizontal" />

</LinearLayout>